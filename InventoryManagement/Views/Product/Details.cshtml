@model InventoryManagement.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details - Product</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
       
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitId)
        </dt>
        <div class="form-group col-12 justify-content-center align-middle mb-0 pb-0">
            <img id="PreviewPhoto" src="~/images/@Model.PhotoUrl" alt="Logo Image"
                 width="300" height="300" style="border:1px ;margin-top:30px; " />
        </div>
    </dl>
</div>
<div>
    <a class="btn btn-secondary" asp-action="index"
       asp-route-pg="@TempData["CurrentPage"]">Back</a>
</div>