@{
    ViewData["Title"] = "Home Page";
}
    <div class="homepage">
        <div class="firstpage">
    <div class="row m-2">
        <div class="col-4">
            <img src="/images/cart.png" class="img-fluid" />
        </div>
        <div class="col-8">
                <p><h1 class="text-center font-weight-bolder right-aligned">INVENTORY MANAGEMENT</h1></p>
                <p><h5 class="right-aligned">Simple to use, beautifully designed, customizable inventory software system for any business buying and selling goods.</h5></p>
                <button type="button" class="btn btn-dark">Manage Inventory</button>
        </div>
        </div>
        </div>
        <div class="containers">
            <div class="row">
                <div class="col-8">
                    <h1>Improve performance & process time</h1>
                    <h3>Better organize your warehouse with the smart double entry inventory system.</h3>
                    <p>Get the most efficient stocking method and improve all your internal operations. Inventory's double-entry inventory has no stock input, output or transformation. Instead, all operations are stock moves between locations.</p>
                </div>
                <div class="col-4">
                    <div id="carouselExampleFade" class="carousel slide carousel-fade">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/images/slide1.png" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/slide2.png" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/slide4.png" class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

