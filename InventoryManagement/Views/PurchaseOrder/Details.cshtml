@model InventoryManagement.Models.PoHeader

@{
    ViewData["Title"] = "Details";
}

<div class="card" >
    <div class="card-header bg-success text-uppercase text-white text-center mb-2 pt-0" style="height:25px;">
        <h6>Purchase Order - Details</h6>
    </div>
    
    <form id="InventoryM" >
        <div class="row col-13" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col-2">
                <label asp-for="PoNumber" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <input asp-for="PoNumber" class="form-control form-control-plaintext" readonly />
            </div>

            <div class="row col-2">
            </div>

            <div class="form-group col-2">
                <label asp-for="PoDate" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <input asp-for="PoDate" class="form-control form-control-plaintext" readonly />
            </div>

            <div class="form-group col-2">
                <label asp-for="SupplierId" class="control-label"></label>
                
            </div>
            <div class="form-group col-3">
                <select asp-for="SupplierId" class="form-control form-control-plaintext" readonly asp-items="ViewBag.SupplierList"></select>
            </div>

            <div class="row col-2">
            </div>

            <div class="form-group col-2">
                <label asp-for="BaseCurrencyId" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <select asp-for="BaseCurrencyId" class="form-control form-control-plaintext" readonly asp-items="ViewBag.BaseCurrencyList"></select>
            </div>

            <div class="form-group col-2">
                <label asp-for="PoCurrencyId" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <select asp-for="PoCurrencyId" class="form-control form-control-plaintext" readonly asp-items="ViewBag.PoCurrencyList"></select>

            <div class="row col-2">
            </div>

            <div class="form-group col-2">
                <label asp-for="ExchangeRate" class="control-label"></label> 
            </div>
            <div class="form-group col-3">
                    <input asp-for="ExchangeRate" class="form-control form-control-plaintext" readonly />
            </div>

            <div class="form-group col-2">
                <label asp-for="QuotationNo" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                    <input asp-for="QuotationNo" class="form-control form-control-plaintext" readonly />
            </div>

            <div class="row col-2">
            </div>

            <div class="form-group col-2">
                <label asp-for="QuotationDate" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                    <input asp-for="QuotationDate" class="form-control form-control-plaintext" readonly />
            </div>

            <div class="form-group col-2">
                <label asp-for="PaymentTerms" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                    <input asp-for="PaymentTerms" class="form-control form-control-plaintext" readonly />
            </div>

            <div class="row col-2">
            </div>

            <div class="form-group col-2">
                <label asp-for="Remarks" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                    <input asp-for="Remarks" class="form-control form-control-plaintext" readonly />
            </div>

            <div class="col-12 ml-5">
                <table id="CodesTable" class="table table-borderless table-sm mb-0 pb-0">
                  <thead>
                    <tr>
                        <th>
                            Product
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            FOB
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Unit
                        </th>
                        <th style="width:60px;">
                            
                        </th>
                    </tr>
                   </thead>

                    <tbody>
                        @for (int i = 0; i < Model.PoDetails.Count; i++)
                        {
                            <tr>
                                <td>
                                    <select asp-for="@Model.PoDetails[i].ProductCode" class="form-control form-control-plaintext" readonly
                                        asp-items="ViewBag.ProductList"></select>
                                </td>
                                <td>
                                        <input asp-for="@Model.PoDetails[i].Quantity" class="form-control form-control-plaintext" readonly />
                                </td>
                                <td>
                                        <input asp-for="@Model.PoDetails[i].Fob" class="form-control form-control-plaintext" readonly />
                                </td>
                                <td>
                                        <input asp-for="@Model.PoDetails[i].PrcInBaseCur" class="form-control form-control-plaintext" readonly />
                                </td>
                                <td>
                                        <input asp-for="@Model.PoDetails[i].UnitName" class="form-control form-control-plaintext" readonly />
                                </td>
                                <td style="width:60px;">
                                    
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

            <div class="form-group btn-group col-12">
                <div class="col-1"></div>
                <div class="col-5">
                        <a class="btn btn-primary btn-block" asp-action="Edit" asp-route-pg="@TempData.Peek("CurrentPage")">Edit</a>
                </div>
                <div class="col-5">
                    <a class="btn btn-primary btn-block" asp-action="index" asp-route-pg="@TempData.Peek("CurrentPage")">Back</a>
                </div>
                <div class="col-1"></div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        CalcTotals();
    </script>
}
